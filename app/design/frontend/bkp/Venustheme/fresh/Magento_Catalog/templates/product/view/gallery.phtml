    <div class="icon">
        <?php
        if($show_salelabel) {
            $originalPrice = (float)$_product->getPrice();
            $finalPrice = (float)$_product->getFinalPrice();
            $percentage = 0;
            if ($originalPrice > $finalPrice) {
                $percentage = round(($originalPrice - $finalPrice) * 100 / $originalPrice);
            }

            if ($percentage) { ?>
                <span class='onsale'><span>-<?php echo $percentage;?>%</span></span>
            <?php } 

        }  
        if($show_newlabel) {
            $is_new = $data->checkProductIsNew( $_product );
            if($is_new) { ?>
            <span class="new-icon"><span><?php echo __("New");?></span></span>
            <?php
        }
    }
    ?>
</div>
