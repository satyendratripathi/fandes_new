<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_img_width" xsi:type="string">auto</argument>
                <argument name="logo_img_height" xsi:type="string">auto</argument>
            </arguments>
        </referenceBlock>
        
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="wishlist_sidebar" remove="true"/>
        <referenceBlock name="form.subscribe" remove="true"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>
        <referenceContainer name="before.body.end">
			<block class="Magento\Framework\View\Element\Template" name="magento.theme.js" after="-" template="Magento_Theme::js.phtml" />
		</referenceContainer>
    </body>
</page>
