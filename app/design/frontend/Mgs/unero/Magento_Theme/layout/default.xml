<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no"/>
		<css src="css/bootstrap.min.css"/>
		<css src="css/font-awesome.css"/>
        <css src="css/pe-icon-7-stroke.css"/>
		<css src="css/menu.css"/>
		<css src="css/theme.css"/>
		<css src="css/responsive.css"/>
		<css src="MGS_Mpanel::css/color.css"/>
		<script src="js/bootstrap.js"/>
		<script src="js/custom.js"/>
    </head>
    <body>
      <container name="main-wrapper-container" htmlTag="div" htmlClass="main-wrapper" />
      <referenceContainer name="header.container">
        <block class="Magento\Theme\Block\Html\Header" name="header" as="header" after="-">
          <arguments>
            <argument name="show_part" xsi:type="string">welcome</argument>
          </arguments>
          <block class="Magento\Store\Block\Switcher" name="store_language" as="store_language" template="switch/languages.phtml"/>
          <block class="Magento\Directory\Block\Currency" name="currency" before="store_language" template="currency.phtml"/>
          <block class="Magento\Framework\View\Element\Html\Links" name="top.links">
            <arguments>
              <argument name="css_class" xsi:type="string">top-links list-inline text-right</argument>
            </arguments>
          </block>
          
          <block class="Magento\Theme\Block\Html\Header\Logo" name="logo">
			  <arguments>
				  <argument name="logo_img_width" xsi:type="number">189</argument>
				  <argument name="logo_img_height" xsi:type="number">64</argument>
			  </arguments>
		  </block>
          
          
          <block class="Magento\Framework\View\Element\Template" name="top.search" as="topSearch" template="Magento_Search::form.mini.phtml" />
          
          <block class="MGS\Mmegamenu\Block\Mmegamenu" name="megamenu" template="MGS_Mmegamenu::navigation.phtml"/>
          
          <block class="Magento\Theme\Block\Html\Topmenu" name="catalog.topnav" template="html/topmenu.phtml" ttl="3600" before="-"/>
        </block>
		
		<referenceBlock name="header">
			<block class="MGS\Mpanel\Block\Form\Register" name="customer_form_register_header" template="Magento_Customer::form/register_header.phtml">
				<container name="form.additional.info.create.header" as="form_additional_info_create_header">
					<block class="Magento\Captcha\Block\Captcha" name="captcha_create" after="-" cacheable="false">
							<action method="setFormId">
								<argument name="formId" xsi:type="string">user_create</argument>
							</action>
							<action method="setImgWidth">
								<argument name="width" xsi:type="string">230</argument>
							</action>
							<action method="setImgHeight">
								<argument name="width" xsi:type="string">50</argument>
							</action>
						</block>
				</container>
				<container name="customer.form.register.fields.before" as="form_fields_before" label="Form Fields Before" htmlTag="div" htmlClass="customer-form-before"/>
				<block class="Magento\Framework\View\Element\Template" name="form_additional_info_register" template="MGS_GDPR::customer/form/register.phtml" ifconfig="gdpr/general/active"/>
			</block>
			<block class="MGS\Mpanel\Block\Form\Login" name="customer_form_login_header" template="Magento_Customer::form/login_header.phtml">
				<container name="form.additional.info.login.header" as="form_additional_info_login_header">
					<block class="Magento\Captcha\Block\Captcha" name="captcha_login" after="-" cacheable="false">
						<action method="setFormId">
							<argument name="formId" xsi:type="string">user_login</argument>
						</action>
						<action method="setImgWidth">
							<argument name="width" xsi:type="string">230</argument>
						</action>
						<action method="setImgHeight">
							<argument name="width" xsi:type="string">50</argument>
						</action>
					</block>
				</container>
				<block class="Magento\Framework\View\Element\Template" name="form_additional_info_login" template="MGS_GDPR::customer/form/login.phtml" ifconfig="gdpr/general/active"/>
			</block>
		</referenceBlock>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="captcha_page_head_components" template="Magento_Captcha::js/components.phtml"/>
        </referenceBlock>
		
      </referenceContainer>
		
      <move element="top.search" destination="header"/>
      <move element="minicart" destination="header"/>
      <move element="page.main.title" destination="breadcrumbs"/>
		
		
		
      <referenceBlock name="advanced-search-link" remove="true"/>
      <referenceBlock name="skip_to_content" remove="true"/>
      <!--<referenceBlock name="authentication-popup" remove="true"/>-->
      <referenceBlock name="navigation.sections" remove="true"/>
		
      <block class="Magento\Theme\Block\Html\Footer" name="footer" template="Magento_Theme::html/footer.phtml"/>
      
      <move element="page.wrapper" destination="main-wrapper-container" />
      <move element="header.container" destination="main-wrapper-container" before="page.wrapper" />
      <move element="footer-container" destination="main-wrapper-container" after="page.wrapper" />
      <move element="footer" destination="footer-container" />
    </body>
</page>
