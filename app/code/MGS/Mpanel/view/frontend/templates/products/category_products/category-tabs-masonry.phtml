                require( [ 'bridget' ], function( jQueryBridget ) {
                    jQueryBridget( 'isotope', Isotope, $ );
                    $('.product-tab-masonry .menu-product-tabs a').click(function(){
                        var el = $(this).attr("data-listproduct");
